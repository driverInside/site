@import './colors.styl'

html
body
	padding 0
	margin 0

// ***************************
//	MIXINS
// ***************************
vertical-align()
	height 100%
	-webkit-transform-style preserve-3d
	-moz-transform-style preserve-3d
	transform-style preserve-3d
	& > div:nth-child(1)
		position relative
		top 50%
		transform translateY(-50%)

@media only screen
	body
		background-color heaven(1)

@media only screen and (max-width: 40em)
	h1
	h2
	p
		font-family 'Titillium Web', sans-serif
		
	section#one
		height 100%
		background-image url('../img/beach.png')
		background-position center center
		background-repeat no-repeat
		background-attachment fixed
		background-size cover
		background-color heaven(1)
		text-align center
		div.wrapper
			vertical-align()
			background-color absolut(.7)
			h1, p
				color white(1)
			h1
				font-weight 800
			p
				display inline-block
				border-top 1px solid white(1)
				border-bottom 1px solid white(1)
				padding 1% 3%
	
	section#about
		background-color silver(.4)
		h2
			text-align center
		p
			padding 0 10%