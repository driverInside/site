@import './colors.styl'

//	MIXINS
vertical-align()
	height 100%
	-webkit-transform-style preserve-3d
	-moz-transform-style preserve-3d
	transform-style preserve-3d
	& > div:nth-child(1)
		position relative
		top 50%
		transform translateY(-50%)
		
html
body
	padding 0
	margin 0


@media only screen
	body
		background-color heaven(1)

@media only screen and (max-width: 40em)
	h1
	h2
	p
		font-family 'Titillium Web', sans-serif
		
	section#one
		height 100%
		background-image url('../img/beach.png')
		background-position center center
		background-repeat no-repeat
		background-attachment fixed
		background-size cover
		background-color heaven(1)
		text-align center
		div.wrapper
			vertical-align()
			background-color absolut(.7)
			padding 1% 0 1% 0 // Idk what happen here.
			h1, p
				color white(1)
			h1
				font-weight 800
			p
				display inline-block
				border-top 1px solid white(1)
				border-bottom 1px solid white(1)
				padding 1% 3%
	
	section#projects
	section#events
	section#about
		div
			padding 15% 0 15% 0
			h2
				text-align center
			p
				padding 0 10%
	
	section#about
		background-color yellow(.4)
		div
			h2
				color teal(1)
			p
				color #333
	section#events
		background-color red(1)
		
